// Program to demonstrate in finding the Maximum of Three Numbers
// using Nested If statement.
#include <iostream>
using namespace std;
int main()
{
	int a, b, c, result;

	cout << "Enter three Number : ";
	cin >> a >> b >> c;
	if( a > b )
	{
		if( a > c )    
		 	result = a; 
		else
			result = c ;
	}
	else
	{
		if( b > c)
			result = b;
		else
			result = c;
	}
	cout << "Greatest Number is : " << result;
	return 0;
}
